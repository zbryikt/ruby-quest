extends /base.pug
block vars
  - assets = function(path) { return "assets/pack/devil-workshop/3D/png/" + path; }
block head
  style(type="text/css"): :stylus
    body
      background: #212529
      /* background: url(/assets/img/cloud.svg) center center */
block body
  .tile.d-none(ld="sample-tile") #[.b]#[.e]#[.t]#[.s]
  .w-100.h-100.d-flex.justify-content-center.align-items-center.flex-column
    .scene(ld="scene")
      .field(ld="field")
      .user(ld="user")
    .d-flex
      .info.mr-2.py-2.pl-3.pr-4.text-sm.rounded.bg-dark.text-light.shadow
        .d-flex
          div 關卡
          .lv.text-right(style="width:8em",ld="lv") 0
        .d-flex
          div 得分
          .score.text-right(style="width:8em",ld="score") 0
      .bg-dark.text-light.p-3.rounded.shadow.clickable(ld="restart") 重來#[sup R]
  .ldcv(ld="finish"): .w-640.base: .inner.card: .card-body
    .text-center
      img.mb-4(src="/assets/img/cheers.svg",style="width:96px")
      div: img(src="/assets/img/finish.svg")
    .m-4.text-center.text-lg
      p 恭喜你破關！你的總得分為：
      .m-4.font-weight-bold: h1.text-success #[span(ld="score")] 
    .text-center: .btn.btn-lg.btn-primary(ld="reset") 我想要重頭再玩一次 
    +nbr(1)
  audio(ld="bgm",loop)
    source(src="/assets/snd/bgm.ogg",type="audio/ogg")


block script
  +script("/js/v2.js")

